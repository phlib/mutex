{
    "name": "phlib/mutex",
    "description": "PHP mutex handling in different ways",
    "keywords": [
        "phlib",
        "mutex"
    ],
    "homepage": "https://github.com/phlib/mutex",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "James Dempster"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/mutex/contributors"
        }
    ],
    "require": {
        "php" : "^7.4 || ^8.0",
        "phlib/config" : "^2",
        "phlib/db": "^2 || ^3"
    },
    "suggest": {
        "ext-pdo": "Required to use MySQL mutex",
        "ext-pdo_mysql": "Required to use MySQL mutex"
    },
    "require-dev": {
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "phpunit/phpunit" : "^9",
        "symplify/easy-coding-standard": "^12"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\Mutex\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\Mutex\\Test\\": "tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi"
    }
}
